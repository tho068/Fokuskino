<?xml version="1.0" encoding="UTF-8"?>
<selector
xmlns:android="http://schemas.android.com/apk/res/android">

 <item android:state_focused="true" >
    <shape android:shape="rectangle">
        <gradient
            android:startColor="#d2d2d2"
            android:endColor="#ececec"
            android:angle="270" />
        <stroke
            android:width="0dp"
            android:color="#3edb01" />
        <corners
            android:radius="0dp" /> 
    </shape>
</item>  
<item>
    <shape android:shape="rectangle">
        <gradient
            android:startColor="#ccc"
            android:endColor="#ddd"
            android:angle="270" />
        <stroke
            android:width="0dp"
            android:color="#3edb01" />
        <corners
            android:radius="0dp" /> 
    </shape>
</item>
</selector>